@model List<Service>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Services:</h1>
        <a asp-action="create" asp-controller="service" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Icon</th>
                <th scope="col">Order</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var service in Model)
            {
                order++;
            <tr>
                <th scope="row">@order</th>
                <td>@service.Title</td>
                <td><i class="@service.Icon"></i></td>
                <td>@service.Order</td>
                <td>
                    <a asp-action="edit" asp-route-id="@service.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="deletefetch" asp-route-id="@service.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>




