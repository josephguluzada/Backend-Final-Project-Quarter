@using Microsoft.AspNetCore.Identity;
@model List<IdentityRole>
@{
    ViewData["Title"] = "Index";
    int order = 0;
}

<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Sliders:</h1>
        <a asp-action="create" asp-controller="role" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                order++;
                <tr>
                    <th scope="row">@order</th>
                    <td>@role.Name</td>
                    <td>
                        <a asp-action="edit" asp-route-name="@role.Name" class="btn btn-warning">Edit</a>
                        <a asp-action="delete" asp-route-name="@role.Name" class="btn btn-danger btn-role-delete">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>





