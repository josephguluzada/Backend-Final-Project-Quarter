@model List<Review>
@{
    ViewData["Title"] = "Index";
    int index = 0;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center">
        <h1>Reviews:</h1>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">Email</th>
                <th scope="col">Text</th>
                <th scope="col">Status</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                index++;
                <tr>
                    <th scope="row">@index</th>
                    <td>@review.AppUser.FullName</td>
                    <td>@review.AppUser.Email</td>
                    <td>@(review.Text.Length>50?review.Text.Substring(0,50):review.Text)</td>
                    <td>
                        @if (review.IsAccepted == true)
                        {
                            <h5><span style="padding: 5px; background-color: green; breview-radius: 3px; display: inline-block; margin-top: 2px; color: white; font-weight: 600; font-size: 1rem; min-width: 90px; text-align: center">Accepted</span></h5>
                        }
                        else if (review.IsAccepted == false)
                        {
                            <h5><span style="padding: 5px; background-color: red; breview-radius: 3px; display: inline-block; margin-top: 2px; color: white; font-weight: 600; font-size: 1rem; min-width: 90px;text-align:center">Rejected</span></h5>
                        }
                        else
                        {
                            <h5><span style="padding: 5px; background-color: lightslategrey; breview-radius: 3px; display: inline-block; margin-top: 2px; color: white; font-weight: 600; font-size: 1rem; min-width: 90px;text-align:center">Pending</span></h5>
                        }
                    </td>
                    <td>
                        <a asp-action="edit" asp-route-id="@review.Id" class="btn btn-warning">Edit</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>
